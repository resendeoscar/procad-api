{
    "compilerOptions": {
      "lib": [
        "es2019"
      ],
      "target": "es2018",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "alwaysStrict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true
    },
    "ts-node": {
      "files": true
    },
    "files": [
      "src/globals.d.ts"
    ],
    "include": ["src/**/*.ts", "**/*.ts", "**/*.js"]
  }
